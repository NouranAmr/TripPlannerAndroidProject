<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="iti.jets.mad.tripplannerproject">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".screens.homescreen.historyfragment.historyfragment.MapsActivity"
            android:label="@string/title_activity_maps"></activity>
        <activity android:name=".screens.addtripscreen.AddTripActivity" />
        <activity android:name=".screens.homescreen.HomeActivity" />
        <activity android:name=".screens.loginscreen.LoginActivity" />
        <activity android:name=".screens.registerscreen.RegisterActivity" />
        <activity android:name=".screens.addtripscreen.alarmpackage.AlarmActivity"/>
        <activity android:name=".screens.splashscreen.SplashActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".model.services.FloatingService"
            android:enabled="true"
            android:exported="false"/>

        <meta-data android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDWfuuXPaayWjdUpTv-kiQogKe65Y3qr8M"/>
        <receiver android:name=".screens.addtripscreen.alarmbroadcast.AlertReciever" />
        <receiver android:name=".screens.addtripscreen.alarmbroadcast.BroadCastAlert" />
    </application>

</manifest>